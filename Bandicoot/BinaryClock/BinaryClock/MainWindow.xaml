        </Ellipse>
        <Ellipse Name="c22" Margin="35,60,0,0" VerticalAlignment="Top" Grid.Column="1">
            <Ellipse.Effect>
                <DropShadowEffect Color="Black" Opacity=".65" ShadowDepth="2"  />
