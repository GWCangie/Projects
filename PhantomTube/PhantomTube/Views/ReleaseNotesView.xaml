                <mui:BBCodeBlock BBCode="-fix volume initialization from registry bug " Margin="0,0,0,15" />
                <mui:BBCodeBlock BBCode="-current duration label " Margin="0,0,0,15" />
                <mui:BBCodeBlock BBCode="-current progress label timer " Margin="0,0,0,15" />
                <mui:BBCodeBlock BBCode="-current played song URL " Margin="0,0,0,15" />
                
