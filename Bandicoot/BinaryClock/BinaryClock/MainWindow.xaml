        </Ellipse>
        <Ellipse Name="c24" Margin="35,35,0,0" VerticalAlignment="Top" Grid.Column="1">
            <Ellipse.Effect>
                <DropShadowEffect Color="Black" Opacity=".65" ShadowDepth="2"  />
