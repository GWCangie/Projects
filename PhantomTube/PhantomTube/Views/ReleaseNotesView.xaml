                <mui:BBCodeBlock BBCode="[b]Version[/b]: 1.0.0.1     [b]Date[/b]: 28.05.2014" Margin="0,0,10,15"/>
                <mui:BBCodeBlock BBCode="-time progress slider - drag " Margin="0,0,0,15" />
