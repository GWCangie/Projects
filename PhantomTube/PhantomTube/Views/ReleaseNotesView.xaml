                <mui:BBCodeBlock BBCode="-add grid splitter playlist and queue songs" Margin="0,0,0,15" />
                <mui:BBCodeBlock BBCode="-add queue songs logic" Margin="0,0,0,15" />
                <mui:BBCodeBlock BBCode="-add play next menu item main songs grid" Margin="0,0,0,15" />
                <mui:BBCodeBlock BBCode="-add remove songs from queue grid" Margin="0,0,0,15" />
                <mui:BBCodeBlock BBCode="-fix Play button UI bug" Margin="0,0,0,15" />
                <mui:BBCodeBlock BBCode="-add next song button" Margin="0,0,0,15" />
                <mui:BBCodeBlock BBCode="-add last song button" Margin="0,0,0,15" />
                <mui:BBCodeBlock BBCode="-add new icon" Margin="0,0,0,15" />
